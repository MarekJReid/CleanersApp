            <input class="form-control" type="text" name="cleaner[name]" value="<%=cleaner.name%>">
            </div>
            
            <div class ="form-group">
            <input class="form-control" type="text" name="cleaner[rate]" value="<%=cleaner.rate%>" min="0.01" step="0.01">
            </div>

            <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= cleaner.location %>">
</div>

            <div class ="form-group">
            <input class="form-control" type="text" name="cleaner[description]" value="<%=cleaner.description%>">
            </div>
                
                
                <button class="btn btn-primary btn-block" type="">Submit!</button><br />
            </form>
                <a href="../cleanerProfiles">
                    <-- Go back</a> </div> </div> <% include ../partials/footer %>
        </div>
    </div>
</div>
